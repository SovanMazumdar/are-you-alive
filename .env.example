# Daily Check-In Monitor Environment Variables
# Copy this file to .env and fill in your values

# Required: Emergency contact email (where alerts are sent)
EMERGENCY_EMAIL=your-email@example.com

# Required: SMTP settings for email delivery
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=yourgmail@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=Are You Alive <yourgmail@gmail.com>
TIMEZONE=Asia/Kolkata

# Optional: Application settings
ALERT_TIME=00:45
FLASK_DEBUG=false
PORT=5000
